<ibst>
   <!-- "settings" node is not part of the binary -->
   <settings>
      <number name="bin_size" value="0" />
      <asymmetric_key name="key" value="data/key.pem" />
      <number name="expiration_seconds" value="31536000" />
      <number name="offline_signing" value="0" />
      <file name="signature_file" value="" required="false" />
      <string name="save_hash_path" value="" />
      <date name="date" />

      <!-- flags -->
      <number name="single_boot" value="0" />
      <number name="global_valid" value="0" />
      <number name="anti_replay_protected" value="0" />
      <number name="time_limited" value="0" />
      <number name="manufacturing_lot_restricted" value="0" />

      <string name="pids_from_file" value="" />
      <!-- node with name "node" will override specific node in layout - determined by "name" attribute (it should be unique) -->
      <number name="pid_entry_size" value="0x14" />
      <node name="pids">
         <byte_array name="from_file" calculate="/decomposition/part_ids.value" enabled="/settings/pids_from_file.empty == false" />
         <pid enabled="parent/from_file.enabled == false">
            <byte_array name="part_id" size="12" value="BEA0E5E46300E84020FE394B" />
            <byte_array name="nonce" size="4" value="0xEEC4D74A"/>
            <byte_array name="time_base" size="4" value="00000100" />
         </pid>
      </node>

      <node name="knobs">
         <knob>
            <number name="knob_id" size="4" value="0x80860002" />
            <number name="knob_data" size="4" value="1" />
         </knob>
         <knob>
            <number name="knob_id" size="4" value="0x80860020" />
            <number name="knob_data" size="4" value="1" />
         </knob>
      </node>

      <number name="pts_salt" value="32" />
      <number name="pts_algorithm" value="4" /> 

      <number name="pts_based_key_revocation" value="0" />
      <number name="pts" value="1" />
      <number name="pts_hash_algorithm" value="2" />
      <rsa_key name="pts_key" value="" required="false" />

      <number name="pts_offline_signing" value="0" />
      <file name="pts_signature_file" value="" required="false" />
      <string name="pts_save_hash_path" value="" />

      <string name="output_name" value="" />

   <!-- external signing-->
      <string name="signing_utility" value=""/>
      <string name="signing_utility_timeout" value="60"/>
   </settings>

   <!-- "layout" node describes structure of the binary -->
   <layout>
      <token>
         <manifest>
            <manifest_header_e>
               <number name="header_type" size="4" value="4" />
               <number name="header_length" size="4" calculate="parent.size / 4" />
               <number name="header_version" size="4" calculate="parent/signature.header_version"/>
               <bit_field name="flags" size="4" >
                  <bit name="pv_state" bit_low="0" bit_high="0" value="0" />
                  <bit name="reserved" bit_low="1" bit_high="30" value="0" />
                  <bit name="debug" bit_low="31" bit_high="31" value="0" />
               </bit_field>
               <number name="vendor" size="4" value="0x8086" />
               <byte_array name="date" size="4" calculate="/settings/date.bcd" />
               <number name="size" size="4" calculate="parent/parent.size / 4" />
               <string name="header_id" size="4" value="$MN2" />
               <number name="reserved" size="4" value="0" />
               <number name="version" size="8" value="0" />
               <number name="svn" size="4" value="1" />
               <number name="reserved" size="72" value="0" />
               <rsa_signing enabled="/settings/key.type_rsa">
                  <number name="modulus_size" size="4" calculate="parent/modulus.size / 4" />
                  <number name="exponent_size" size="4" calculate="parent/exponent.size / 4" />
                  <byte_array name="modulus" calculate="/settings/key.modulus" /> <!-- "size" attribute is taken from calculate (size of the result) -->
                  <byte_array name="exponent" calculate="/settings/key.exponent" />
               </rsa_signing>
               <ec_signing enabled="/settings/key.type_rsa == false">
                  <number name="coordinate_size" size="4" calculate="/settings/key.coordinate_size / 4"/>
                  <number name="reserved" size="4" value="0"/>
                  <byte_array name="qx" calculate="/settings/key.qx" />
                  <byte_array name="qy" calculate="/settings/key.qy" />
               </ec_signing>
               <function_sign name="signature" legacy="true" >
                  <signing_utility calculate="/settings/signing_utility"/>
                  <signing_utility_timeout calculate="/settings/signing_utility_timeout.value"/>
                  <key value="/settings/key" />
                  <sha value="256" />
                  <padding_scheme value="/settings/key.signature_size == 256 ? 'v1_5' : 'PSS'" salt_len="32"/>
                  <input>
                     <data start="parent.offset" end="/settings/key.type_rsa ? parent/rsa_signing/modulus.offset : parent/ec_signing/qx.offset" />
                     <data path="parent/parent/token_extension" />
                  </input>
                  <save_hash calculate="/settings/save_hash_path.size > 0" />
                  <save_hash_path calculate="/settings/save_hash_path.value" />
                  <load_external_data calculate="/settings/signature_file.size > 0" />
                  <external_data calculate="/settings/signature_file.data" />
                  <offline_signing calculate="/settings/offline_signing.value" />
               </function_sign>
            </manifest_header_e>

            <token_extension>
               <token_extension_header>
                  <number name="extension_type" size="4" value="21" />
                  <number name="extension_length" size="4" calculate="parent/parent.size" />
                  <number name="version" size="4" value="1" />
                  <number name="payload_version" size="4" value="1" />
                  <number name="number_ids"
                          size="4"
                          calculate="parent/parent/pids_optional.size / /settings/pid_entry_size.value" />
                  <number name="token_id" size="4" value="3" />
                  <bit_field name="flags" size="4" >
                     <bit name="single_boot" bit_low="0" bit_high="0" calculate="/settings/single_boot.value" />
                     <bit name="global_valid" bit_low="1" bit_high="1" calculate="/settings/global_valid.value" />
                     <bit name="anti_replay_protected" bit_low="2" bit_high="2" calculate="/settings/anti_replay_protected.value" />
                     <bit name="time_limited" bit_low="3" bit_high="3" calculate="/settings/time_limited.value" />
                     <bit name="manufacturing_lot_restricted" bit_low="4" bit_high="4" calculate="/settings/manufacturing_lot_restricted.value" />
                     <bit name="reserved" bit_low="5" bit_high="31" value="0" />
                  </bit_field>
                  <number name="expiration_seconds" size="4" calculate="/settings/expiration_seconds.value" />
                  <number name="manufacturing_lot" size="4" value="0" />
                  <byte_array name="reserved" size="16" value="0" />
               </token_extension_header>
               <pids_optional enabled="parent/token_extension_header/flags/global_valid.value == 0">
                  <pids>
                     <pid>
                        <byte_array name="part_id" size="12" value="0" />
                        <byte_array name="nonce" size="4" value="0" />
                        <byte_array name="time_base" size="4" value="0" />
                     </pid>
                  </pids>
               </pids_optional>
               <token_knobs>
                  <number name="number_of_knobes" size="4" calculate="parent/knobs.size / parent/knobs/knob.size" />
                  <knobs>
                     <knob>
                        <number name="knob_id" size="4" value="0x80860001" />
                        <number name="knob_data" size="4" value="1" />
                     </knob>
                     <knob>
                        <number name="knob_id" size="4" value="0x80860020" />
                        <number name="knob_data" size="4" value="1" />
                     </knob>
                  </knobs>
               </token_knobs>
            </token_extension>
         </manifest>

         <pts_footer enabled="/settings/pts_based_key_revocation.value != 0 " size="1092">
            <number name="header_id" value="0x544F4F46" size="4" />
            <number name="type" value="1" size="4"/>
            <number name="size" value="1092" size="4"/>
            <number name="algo" calculate="/settings/pts_algorithm.value" size="4"/>
            <crypto_block>
               <number name="module_size" calculate="parent/modulus.size / 4" size="4"/>
               <number name="exponent_size" calculate="parent/exponent.size / 4" size="4"/>
               <byte_array name="modulus" calculate="/settings/pts_key.modulus" />
               <byte_array name="exponent" calculate="/settings/pts_key.exponent" />
               <function_sign name="signature" legacy="true">
                  <signing_utility calculate="/settings/signing_utility"/>
                  <signing_utility_timeout calculate="/settings/signing_utility_timeout.value"/>
                  <key value="/settings/pts_key" />
                  <sha value="256" />
                  <padding_scheme value="PSS" salt_len="/settings/pts_salt.value"/>
                  <input>
                     <data path="parent/parent/header_id" />
                     <data path="parent/parent/type"/>
                     <data path="parent/parent/size"/>
                     <data path="parent/parent/algo"/>
                     <data path="parent/module_size"/>
                     <data path="parent/exponent_size"/>
                     <data path="parent/parent/pts_value"/>
                     <data path="parent/parent/hash_algorithm"/>
                     <data path="parent/parent/hash"/>
                  </input>
                  <save_hash calculate="/settings/pts_save_hash_path.size > 0" />
                  <save_hash_path calculate="/settings/pts_save_hash_path.value" />
                  <load_external_data calculate="/settings/pts_signature_file.size > 0" />
                  <external_data calculate="/settings/pts_signature_file.data" />
                  <offline_signing calculate="/settings/pts_offline_signing.value" />
               </function_sign>
            </crypto_block>
            <number name="pts_value" calculate="/settings/pts.value" size="4" />
            <number name="hash_algorithm" calculate="/settings/pts_hash_algorithm.value" size="4" />
            <byte_array name="hash" calculate="/settings/key.hashed_key" size="32"/>
         </pts_footer>
      </token>

      <byte_array name="padding" enabled="/settings/bin_size.value != 0" offset="/settings/bin_size.value" size="0" value="" />
   </layout>
   <decomposition file="/settings/pids_from_file.value" > 
      <number name="part_id_version" size="4" />
      <number name="flags" size="4" />
      <number name="htm_fw_version" size="8" />
      <number name="num_of_part_ids" size="4" />
      <number name="lpc_did" size="4" />
      <table name="part_ids" count="parent/num_of_part_ids.value">
         <byte_array name="part_id" size="12" />
         <byte_array name="nonce" size="4"/>
         <byte_array name="time_base" size="4" />
      </table>
   </decomposition>
</ibst>