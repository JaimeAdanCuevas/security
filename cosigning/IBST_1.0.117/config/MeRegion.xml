      <version name="ftpr_version" value="11.0.0.7009" />
      <rsa_key name="ftpr_key" value="data/DBG_KEY.bin" />

      <elf_file name="rbe_elf" value="data/rbe.elf" >
         <module_entry value="ModuleEntry" />
         <objcopy_args value="-O binary" />
         <objcopy_path value="" />
         <objdump_args value="-t" />
         <objdump_path value="" />
         <markers>
            <image_text_start value="_image_text_start" />
            <image_text_end value="_image_text_end" />
