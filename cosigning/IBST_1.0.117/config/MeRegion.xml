                  <signing_utility calculate="/settings/signing_utility"/>
                  <key value="/settings/ftpr_key" />
                  <sha value="256" />
                  <padding_scheme value="v1_5" salt_len=""/>
                  <input>
                     <data start="parent.offset" end="parent/modulus.offset" />
                     <data path="parent/parent/partition_info_extension" />
                     <data path="parent/parent/platform_id_extension" />
