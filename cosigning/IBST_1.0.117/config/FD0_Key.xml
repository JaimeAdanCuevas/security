<ibst>
  <!-- "settings" node is not part of the binary -->
  <settings>
    <rsa_key name="key" value="data/pub.pem" /> <!-- private/ public key expected -->
  </settings>

  <!-- "layout" node describes structure of the binary -->
  <layout>
    <number name="version" size="1" value="0x10"/>
    <number name="key_size" size="2" calculate="/settings/key.signature_size * 8"/>
    <byte_array name="exponent" size="4"  calculate="/settings/key.exponent" />
    <byte_array name="modulus" calculate="/settings/key.modulus" />
  </layout>
</ibst>