<ibst>
  <!-- "settings" node is not part of the binary -->
  <settings>
    <file name="descriptor" value="outimage.bin">
      <offset value="0"/>
      <end value="0x1000"/>
      <decompose>
        <data name="key_size" start="0x801" end="0x803"/>
        <data name="exponent" start="0x803" end="0x807"/>
        <data name="modulus" start="0x807" end="0xA00"/>
        <data name="manifest" start="0xA00" end="0xC00"/>
      </decompose>
    </file>
  </settings>

  <!-- "layout" node describes structure of the binary -->
  <layout>
    <byte_array name="descriptor_to_sign" calculate="/settings/descriptor.data[0x0:0xA00]"/>
    <!-- exclude Descriptor Region Manifest -->
    <byte_array name="descriptor_to_sign2" calculate="/settings/descriptor.data[0xC00:0x1000]"/>
    <function_hash name="descriptor_hash">
      <sha value="256" />
      <input>
        <data path="/layout/descriptor_to_sign" />
        <data path="/layout/descriptor_to_sign2" />
      </input>
    </function_hash>
    <function_verify name="fd0">
      <hash value="parent/descriptor_hash"/>
      <custom_key>
        <size order="little" value="/settings/descriptor.key_size"/> <!-- Size in bits -->
        <exponent order="little" value="/settings/descriptor.exponent"/>
        <modulus  order="little" value="/settings/descriptor.modulus"/>
      </custom_key>
      <signature order="little" value="/settings/descriptor.manifest"/>
    </function_verify>
  </layout>
</ibst>