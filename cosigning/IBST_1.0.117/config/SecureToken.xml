<ibst>
   <!-- "settings" node is not part of the binary -->
   <settings>
      <number name="bin_size" value="0x400" />
      <rsa_key name="key" value="data/key.pem" />
      <number name="expiration_seconds" value="31536000" />
      <number name="offline_signing" value="0" />
      <file name="signature_file" value="" required="false" />
      <string name="save_hash_path" value="" />
      <date name="date" />
      <!-- If empty, default signing utility is used -->
      <string name="signing_utility" size="1" value=""/>

     <!-- flags -->
      <number name="single_boot" value="0" />
      <number name="global_valid" value="0" />
      <number name="anti_replay_protected" value="0" />
      <number name="time_limited" value="0" />
      <number name="manufacturing_lot_restricted" value="0" />

      <!-- node with name "node" will override specific node in layout - determined by "name" attribute (it should be unique) -->
      <node name="pids">
         <pid>
            <byte_array name="part_id" size="12" value="BEA0E5E46300E84020FE394B" />
            <byte_array name="nonce" size="4" value="0xEEC4D74A"/>
            <byte_array name="time_base" size="4" value="00000100" />
         </pid>
      </node>

      <node name="knobs">
         <knob>
            <number name="knob_id" size="4" value="0x80860001" />
            <number name="knob_data" size="4" value="1" />
         </knob>
         <knob>
            <number name="knob_id" size="4" value="0x80860020" />
            <number name="knob_data" size="4" value="1" />
         </knob>
      </node>

   </settings>

   <!-- "layout" node describes structure of the binary -->
   <layout>
      <manifest>
         <manifest_header>
            <number name="header_type" size="4" value="4" />
            <number name="header_length" size="4" calculate="parent.size / 4" />
            <number name="header_version" size="4" value="0x10000" />
            <bit_field name="flags" size="4">
               <bit name="pv_state" bit_low="0" bit_high="0" value="0" />
               <bit name="reserved" bit_low="1" bit_high="30" value="0" />
               <bit name="flags_debug" bit_low="31" bit_high="31" value="0"/>
            </bit_field>
            <number name="vendor" size="4" value="0x8086" />
            <byte_array name="date" size="4" calculate="/settings/date.bcd" />
            <number name="size" size="4" calculate="parent/parent.size / 4" />
            <string name="header_id" size="4" value="$MN2" />
            <number name="reserved" size="4" value="0" />
            <number name="version" size="8" value="0" />
            <number name="svn" size="4" value="1" />
            <number name="reserved" size="72" value="0" />
            <number name="modulus_size" size="4" calculate="parent/modulus.size / 4" />
            <number name="exponent_size" size="4" calculate="parent/exponent.size / 4" />
            <byte_array name="modulus" calculate="/settings/key.modulus" /> <!-- "size" attribute is taken from calculate (size of the result) -->
            <byte_array name="exponent" calculate="/settings/key.exponent" />
            <function_sign name="signature" >
               <signing_utility calculate="/settings/signing_utility"/>
               <key value="/settings/key" />
               <sha value="256" />
               <padding_scheme value="v1_5" salt_len=""/>
               <input>
                  <data start="parent.offset" end="parent/modulus.offset" />
                  <data path="parent/parent/token_extension" />
               </input>
               <save_hash calculate="/settings/save_hash_path.size > 0" />
               <save_hash_path calculate="/settings/save_hash_path.value" />
               <load_external_data calculate="/settings/signature_file.size > 0" />
               <external_data calculate="/settings/signature_file.data" />
               <offline_signing calculate="/settings/offline_signing.value" />
            </function_sign>
         </manifest_header>

         <token_extension>
            <token_extension_header>
               <number name="extension_type" size="4" value="21" />
               <number name="extension_length" size="4" calculate="parent/parent.size" />
               <number name="version" size="4" value="1" />
               <number name="payload_version" size="4" value="1" />
               <number name="number_ids"
                       size="4"
                       calculate="parent/parent/pids_optional.size != 0 ? parent/parent/pids_optional/pids.size / parent/parent/pids_optional/pids/pid.size : 0" />
               <number name="token_id" size="4" value="3" />
               <bit_field name="flags" size="4" >
                  <bit name="single_boot" bit_low="0" bit_high="0" calculate="/settings/single_boot.value" />
                  <bit name="global_valid" bit_low="1" bit_high="1" calculate="/settings/global_valid.value" />
                  <bit name="anti_replay_protected" bit_low="2" bit_high="2" calculate="/settings/anti_replay_protected.value" />
                  <bit name="time_limited" bit_low="3" bit_high="3" calculate="/settings/time_limited.value" />
                  <bit name="manufacturing_lot_restricted" bit_low="4" bit_high="4" calculate="/settings/manufacturing_lot_restricted.value" />
                  <bit name="reserved" bit_low="5" bit_high="31" value="0" />
               </bit_field>
               <number name="expiration_seconds" size="4" calculate="/settings/expiration_seconds.value" />
               <number name="manufacturing_lot" size="4" value="0" />
               <byte_array name="reserved" size="16" value="0" />
            </token_extension_header>
            <pids_optional enabled="parent/token_extension_header/flags/global_valid.value == 0">
               <pids>
                  <pid>
                     <byte_array name="part_id" size="12" value="0" />
                     <byte_array name="nonce" size="4" value="0" />
                     <byte_array name="time_base" size="4" value="0" />
                  </pid>
               </pids>
            </pids_optional>
            <token_knobs>
               <number name="number_of_knobes" size="4" calculate="parent/knobs.size / parent/knobs/knob.size" />
               <knobs>
                  <knob>
                     <number name="knob_id" size="4" value="0x80860001" />
                     <number name="knob_data" size="4" value="1" />
                  </knob>
                  <knob>
                     <number name="knob_id" size="4" value="0x80860020" />
                     <number name="knob_data" size="4" value="1" />
                  </knob>
               </knobs>
            </token_knobs>
         </token_extension>
      </manifest>

      <byte_array name="padding" align="/settings/bin_size.value" size="0" value="" />
   </layout>
</ibst>