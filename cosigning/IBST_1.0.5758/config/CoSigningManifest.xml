<ibst>
   <!-- "settings" node is not part of the binary -->
   <settings>
      <asymmetric_key name="key" value="config/3k_test_key_private.pem" />
      <string name="package_name" value="ACMM" />
      <string name="manifest_name_suffix" value=".man" />
      <string name="manifest_module_name" value="mod_main" />
      <string name="manifest_module_met_name" value="mod_main.met" />
      
      <number name="round_to_length" value="1" />
      <number name="instance_id" value="0x1" />
      <number name="partition_flags" value="0x00000000" />
      <number name="partition_version" value="0x10000000" />
      <number name="vendor_id" value="0x0000" /> <!-- 0x8086 -->
      <number name="version_control_number" value="0" />
      <byte_array name="binary_hash" value="0" size="32"/>
      <number name="svn" value="0" />
      <version name="version" value="0.0.0.0" />
      <number name="hash_type" value="2" />
      <number name="offline_signing" value="0" />
      <file name="signature_file" value="" required="false" />
      <string name="save_hash_path" value="" />

      <file name="module_bin" value="" required="false" />
      <number name="module_bin_enabled" value="0" />
      
      <number name="debug" value="0"/>

      <number name="fw_type" value="1" />
      <number name="fw_subtype" value="1" />
      <date name="date" />
      
      <string name="signing_utility" value=""/> <!-- If empty, default signing utility is used -->
      <string name="signing_utility_timeout" value="60"/> <!-- set value to empty string ("") to disable timeouts -->
      <string name="output_name" value="" />
   </settings>

   <!-- "layout" node describes structure of the binary -->
   <layout>
      <manifest>
         <manifest_header_e>
            <number name="header_type" size="4" value="4" />
            <number name="header_length" size="4" calculate="parent.size / 4" />
            <number name="header_version" size="4" calculate="parent/signature.header_version"/>
            <bit_field name="flags" size="4" >
               <bit name="pv_state" bit_low="0" bit_high="0" value="0" />
               <bit name="reserved" bit_low="1" bit_high="30" value="0" />
               <bit name="debug" bit_low="31" bit_high="31" calculate="/settings/debug.value" />
            </bit_field>
            <number name="vendor" size="4" calculate="/settings/vendor_id.value" />
            <byte_array name="date" size="4" calculate="/settings/date.bcd" />
            <number name="size" size="4" calculate="parent/parent.size / 4" />
            <string name="header_id" size="4" value="$MN2" />
            <number name="reserved" size="4" value="0" />
            <number name="version" size="8" calculate="/settings/version.value" />
            <number name="svn" size="4" calculate="/settings/svn.value" />
            <number name="reserved" size="72" value="0" />
            <rsa_signing enabled="/settings/key.type_rsa">
                <number name="modulus_size" size="4" calculate="parent/modulus.size / 4" />
                <number name="exponent_size" size="4" calculate="parent/exponent.size / 4" />
                <byte_array name="modulus" calculate="/settings/key.modulus" />
                <byte_array name="exponent" calculate="/settings/key.exponent" />
            </rsa_signing>
            <ec_signing enabled="/settings/key.type_rsa == false">
                <number name="coordinate_size" size="4" calculate="/settings/key.coordinate_size / 4"/>
                <number name="reserved" size="4" value="0"/>
                <byte_array name="qx" calculate="/settings/key.qx" />
                <byte_array name="qy" calculate="/settings/key.qy" />
            </ec_signing>
            <function_sign name="signature" legacy="true">
               <signing_utility calculate="/settings/signing_utility"/>
               <signing_utility_timeout calculate="/settings/signing_utility_timeout.value"/>
               <key value="/settings/key" />
               <sha value="256" />
               <padding_scheme value="/settings/key.signature_size == 256 ? 'v1_5' : 'PSS'" salt_len="32"/>
               <input>
                  <data start="parent.offset" end="/settings/key.type_rsa ? parent/rsa_signing/modulus.offset : parent/ec_signing/qx.offset"/>
                  <data path="parent/parent/signed_package_info_extension" />
               </input>
               <save_hash calculate="/settings/save_hash_path.size > 0" />
               <save_hash_path calculate="/settings/save_hash_path.value" />
               <load_external_data calculate="/settings/signature_file.size > 0" />
               <external_data calculate="/settings/signature_file.data" />
               <offline_signing calculate="/settings/offline_signing.value" />
               <reverse calculate="0" />
            </function_sign>
         </manifest_header_e>
         <signed_package_info_extension>
            <signed_package_info_header>
               <number name="extension_type" size="4" value="15" />
               <number name="extension_length" size="4" calculate="parent/parent.size" />
               <string name="package_name" size="4" calculate="/settings/package_name.value" />
               <number name="version_control_number" size="4" calculate="/settings/version_control_number.value" />
               <bit_field name="usage" size="16" >
                  <bit name="reserved1" bit_low="0" bit_high="37" value="0" />
                  <bit name="net" bit_low="38" bit_high="38" calculate="/settings/package_name.value == 'NWLM' ? 1 : 0" />
                  <bit name="os" bit_low="39" bit_high="39" calculate="/settings/package_name.value == 'OSLM' ? 1 : 0" />
                  <bit name="reserved1" bit_low="40" bit_high="54" value="0" />
                  <bit name="fp" bit_low="55" bit_high="55" calculate="/settings/package_name.value == 'FPM' ? 1 : 0" />
                  <bit name="acm" bit_low="56" bit_high="56" calculate="/settings/package_name.value == 'ACMM' ? 1 : 0" />
                  <bit name="reserved1" bit_low="57" bit_high="127" value="0" />
               </bit_field>
               <number name="svn" size="4" calculate="/settings/svn.value" />
               <number name="fw_type" size="1" calculate="/settings/fw_type.value" />
               <number name="fw_subtype" size="1" calculate="/settings/fw_subtype.value" />
               <number name="reserved" size="14" value="0" />
            </signed_package_info_header>
            <signed_package_info_entries>
               <entry>
                  <string name="name" size="12" calculate="/settings/package_name.value == 'OSLM' or /settings/package_name.value == 'NWLM' ? /settings/manifest_module_name.value : /settings/package_name.value" /> <!-- Find out what should be here -->
                  <number name="type" size="1" value="2" />
                  <number name="hash_algorithm" size="1" value="2" />
                  <number name="hash_size" size="2" calculate="parent/metadata_hash.size" />
                  <number name="metadata_size" size="4" calculate="/layout/metadata.size" />
                  <function_hash name="metadata_hash" legacy="true">
                     <sha value="256" />
                     <input>
                        <data path="/layout/metadata" />
                     </input>
                     <reverse calculate="0" />
                  </function_hash>
               </entry>
            </signed_package_info_entries>
         </signed_package_info_extension>
      </manifest>

      <metadata>
         <extension>
            <number name="extension_type" size="4" calculate="/settings/hash_type.value + 0x20 - 1" />
            <number name="extension_length" size="4" calculate="parent.size" />
            <number name="reserved" size="4" value="0" />
            <number name="hash_type" size="4" calculate="/settings/hash_type.value" />
            <number name="hash_algorithm" size="4" value="1" />
            <number name="hash_size" size="4" calculate="parent/image_hash.size" />
            <image_hash>
                <!-- calculation only - this doesn't go to binary -->
                <function_hash enabled="/settings/module_bin.size != 0" legacy="true" name="image_hash_calculation" calc_only="true" >
                   <sha value="256" />
                   <input>
                      <data value="/settings/module_bin.data" />
                   </input>
                   <reverse calculate="0" />
                </function_hash>
                <byte_array name="hash" size="32" calculate="parent/image_hash_calculation.enabled ? parent/image_hash_calculation.value : /settings/binary_hash.value" calc_only="true" validate="parent/image_hash_calculation.enabled or /settings/binary_hash.empty == False" />
                <!-- content in binary -->
                <byte_array name="dword0" size="4" calculate="parent/hash.value[0:4]" order="little"/>
                <byte_array name="dword1" size="4" calculate="parent/hash.value[4:8]" order="little"/>
                <byte_array name="dword2" size="4" calculate="parent/hash.value[8:12]" order="little"/>
                <byte_array name="dword3" size="4" calculate="parent/hash.value[12:16]" order="little"/>
                <byte_array name="dword4" size="4" calculate="parent/hash.value[16:20]" order="little"/>
                <byte_array name="dword5" size="4" calculate="parent/hash.value[20:24]" order="little"/>
                <byte_array name="dword6" size="4" calculate="parent/hash.value[24:28]" order="little"/>
                <byte_array name="dword7" size="4" calculate="parent/hash.value[28:32]" order="little"/>
            </image_hash>
         </extension>
      </metadata>

      <byte_array name="module" calculate="/settings/module_bin.data" align="0x40" enabled="/settings/module_bin_enabled.value != 0" />
      
      <byte_array name="padding" size="0" value="" align="/settings/round_to_length.value" />
   </layout>
</ibst>